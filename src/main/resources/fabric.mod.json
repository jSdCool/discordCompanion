{
  "schemaVersion": 1,
  "id": "discord_companion",
  "version": "${version}",

  "name": "minecraft discord companion",
  "description": "link the chat on a minecraft server to a discord channel via an external program",
  "authors": [
    "jSdCool"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/discord_companion/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.discordcomp.Main"
    ]
  },
  "mixins": [
    "discord_companion.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "1.20.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
